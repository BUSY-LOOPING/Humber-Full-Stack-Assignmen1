extends ../template

block layout-content
    div(class="container mx-auto mt-8 px-4 sm:px-6 lg:px-8")      
      form(method="POST", action="/admin/categories/" + category._id + "/update")
        div(class="mb-4")
          label(for="name" class="block text-sm font-medium text-gray-700") Name:
            input(type="text" id="name" name="name" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm" required value=category.name placeholder="Enter Category Name")
        
        div(class="mb-4")
          label(for="description" class="block text-sm font-medium text-gray-700") Description:
            textarea(id="description" name="description" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 h-32 resize-none") #{category.description}
        
        button(type="submit", class="mb-[50px] btn btn-primary w-full py-3 px-4 rounded border-2 border-blue-500 font-bold text-blue-500 uppercase tracking-wide transition-colors hover:bg-blue-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-md") Update Category
      
      if flash && flash.success
        div(class="alert alert-success mt-6 px-4 py-3 rounded-lg bg-green-100 text-green-800 border border-green-200")= flash.success

    // Optional: Display image preview if category has an image
    if category.imageUrl
      div(class="mt-8 mb-6")
        img(src=category.imageUrl alt="Category Image" class="w-full rounded-lg shadow-md")
