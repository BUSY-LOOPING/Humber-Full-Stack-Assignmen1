extends ../template

block layout-content
    div(class="container mx-auto mt-8 px-4 sm:px-6 lg:px-8")      
      form(method="POST", action=`/admin/products/${product._id}/update`)
        div(class="mb-4")
          label(for="name" class="block text-sm font-medium text-gray-700") Name:
            input(type="text" id="name" name="name" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm" required placeholder="Enter product name" value=product.name)

        div(class="mb-4")
          label(for="description" class="block text-sm font-medium text-gray-700") Description:
            textarea(id="description" name="description" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 h-32 resize-none") product.description

        div(class="mb-4")
          label(for="price" class="block text-sm font-medium text-gray-700") Price:
            input(type="number" id="price" name="price" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm" required placeholder="Enter price amount" value=product.price)
        
        div(class="mb-4")
          label(for="category" class="block text-sm font-medium text-gray-700") Category:
            select(name="category" id="category" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm")
              each category in categories
                option(value=category._id)= category.name
                if product.category == category._id
                  span(class="selected hidden")

        div(class="mb-4")
          label(for="imageUrl" class="block text-sm font-medium text-gray-700") Image URL:
            input(type="url" id="imageUrl" name="imageUrl" class="form-control w-full py-2 px-3 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-sm" placeholder="Enter image URL" value=product.imageUrl)
        
        button(type="submit", class="mb-[50px] btn btn-primary w-full py-3 px-4 rounded border-2 border-blue-500 font-bold text-blue-500 uppercase tracking-wide transition-colors hover:bg-blue-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-500 shadow-md") Update Product
      
